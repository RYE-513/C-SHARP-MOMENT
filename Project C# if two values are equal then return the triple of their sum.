using System;

public class Program
{
    
        // TODO: Write a C# program to compute the sum of two given integers, if two values are equal then return the triple of their sum.
        
    public static void Main(string[] args)
    {
        
        Console.WriteLine(SumTriple(2,2));
        Console.WriteLine(SumTriple(12,10));
        Console.WriteLine(SumTriple(-5,2));          
    }
    
    public static int SumTriple(int a, int b)
    {
        return a == b ? (a + b)*3 : a + b;
        
    }
        
        //////////  MY CODE //////////
        
        int num1, num2, add;
        
        Console.Write("Input a number: ");
        num1 = int.Parse(Console.ReadLine());
        
        Console.Write("Input a number: ");
        num2 = int.Parse(Console.ReadLine());
        
        add = num1 + num2 * 3;
        
        Console.WriteLine("Total: "+add);
        
        
        
    }
