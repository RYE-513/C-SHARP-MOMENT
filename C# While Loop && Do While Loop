using System;

public class Rye {
    public static void Main(string[] args) {
        
        // WHILE LOOP
        
        int index = 1;
        
        while (index <= 5) // if you not declare variable and value it shown the unexpected result
        {
            Console.WriteLine(index);
            index++; // increment add 1 to index. without this increment it will print the index value infinite.
        }
        
        // DO WHILE LOOP - if the while condition is false the "do" word is execute the code inside the loop before it checks the condition "true".
        
        int index = 6;
        
        do {
          Console.WriteLine(index);
          index++;
        } while(index <= 5);
        
        //////////
        //Review
        

     //While Loop

    int rye = 1;
    
    while(rye <= 10) { // the difference between '<' and '<='  with equal is the given 10 is not concluded in the end output
        Console.WriteLine(rye);
        rye++;
    }
    
    // Do While Loop
    
    int ryan = 1;
    
    do { // do while and while loop difference is 'do' is reading the print statement first before whlile statment
        Console.Write("amogus \n");
        ryan++;
    } while(ryan <= 5);
    
       
        
    }
}
