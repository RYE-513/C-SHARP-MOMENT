using System;

public class HelloWorld
{
    public static void Main(string[] args)
    {
        Console.Write("RYAN\nBSCS"); // \n escaping sequence
        string characterName = "RYE STUDYING BSCS";
        Console.WriteLine(characterName);
        Console.WriteLine(characterName.Length);
        
        Console.WriteLine(characterName.ToUpper());
        Console.WriteLine(characterName.ToLower());
        
        Console.WriteLine(characterName.Contains("Academy"));
        
        Console.WriteLine(characterName[2]);
        Console.WriteLine(characterName.IndexOf("B"));
        Console.WriteLine(characterName.IndexOf("BSCS"));
        Console.WriteLine(characterName.IndexOf("x")); // -1 means not match
        
         Console.WriteLine(characterName.Substring(8)); // 8th index read chars so on so forth...
         Console.WriteLine(characterName.Substring(2, 7));
        
    
    
    // number = 30;
    // Console.WriteLine(number);
    // Console.Write(30); // this is called "constant"
    
    // string characterName = "Rye"; // Initialize
    // string characterName; // Declaring
    // characterName = "Ryan"; // Assigning
    }
}
