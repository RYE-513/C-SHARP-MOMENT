using System;

public class Program {
  static void Main(string[] args)
        
        // TODO: Write a C# program to get the absolute value of the difference between two given numbers. 
        // Return double the absolute value of the difference if the first number is greater than second number.
        {
            Console.WriteLine(result(13, 40)); // False, 27 'a > b' 
            Console.WriteLine(result(50, 21)); // True, 58 'a > b'
            Console.WriteLine(result(0, 23));  // False, 23 'a > b'
        }

        public static int result(int a, int b)
        {      
            if (a > b) // this if statement will execute if the given above is 'true'
            {
                return (a - b)*2;
            }
            return b - a; // if not match it will only subtract the 'a' and 'b'
        }
}
