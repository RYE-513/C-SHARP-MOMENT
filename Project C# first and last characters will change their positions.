using System;

public class Program {
    
        // TODO: Write a C# program to create a new string from a given string where the first and last characters will change their positions.
    
  static void Main(string[] args)
        {
            Console.WriteLine(first_last("smogua")); // amogus
            Console.WriteLine(first_last("ryan")); // nyar
            Console.WriteLine(first_last("god")); // dog
        }
       public static string first_last(string ustr) // this method is to reverse the first and last letter of a word.
        {
            return ustr.Length > 1 ? ustr.Substring(ustr.Length - 1) + ustr.Substring(1, ustr.Length - 2) + ustr.Substring(0, 1) : ustr;
        }
}
