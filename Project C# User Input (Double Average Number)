using System;

public class Program
{
    public static void Main(string[] args) {
        
        // TODO: Write a C# Sharp program that takes four numbers as input to calculate and print the average.
        
        double num1, num2, num3, num4, total;
        
        Console.Write("Enter a number: ");
        num1 = double.Parse(Console.ReadLine());
        
        Console.Write("Enter a number: ");
        num2 = double.Parse(Console.ReadLine());
        
        Console.Write("Enter a number: ");
        num3 = double.Parse(Console.ReadLine());
        
        Console.Write("Enter a number: ");
        num4 = double.Parse(Console.ReadLine());
        
        total = (num1 + num2 + num3 + num4) / 4;
        
        Console.WriteLine("The average of {0} + {1} + {2} + {3} is {4}",num1, num2, num3, num4, total);
        
        
    }
}
