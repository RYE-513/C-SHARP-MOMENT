    // TODO: Write a C# program to create a new string from a given string (length 1 or more ) with the first character added at the front and back.
    // sample: 'AMOGUS' become '|A|AMOGUS|A|'

public class Exercise17 {
  static void Main(string[] args)
        {
           string str; 
           int l= 0;
           Console.Write("Input a string : ");
           str = Console.ReadLine();
           if (str.Length>=1)
           {
           var s = str.Substring(0,1);
           Console.WriteLine(s + str + s);
           }
        }
}
